{
    "parser": "babel-eslint",
    "extends": [
        "standard",
        "standard-react"
    ],
    "env": {
        "es6": true
    },
    "plugins": [
        "react"
    ],
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "react/jsx-indent": ["error", 4],
        "react/jsx-indent-props": ["error", 4],
        "no-unneeded-ternary": 0,
        "space-before-function-paren": 0,
        "react/jsx-boolean-value": 0
    }
}